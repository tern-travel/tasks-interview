<%= form_for :session, url: session_path, html: { class: "flex flex-col w-fit mx-auto gap-y-2" } do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit "Login", class: "p-2 border rounded bg-gray-100 hover:bg-gray-200 cursor-pointer" %>
<% end %>
